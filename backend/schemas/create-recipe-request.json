{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "recipe",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "ingredients": {
            "type": "array",
            "items": { "type": "string" }
        },
        "photoUrl": {
            "type": "string"
        }
    },
    "required": ["title","description","ingredients"]
  }